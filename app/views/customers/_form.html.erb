<%= form_for @customer do |f| %>

<!-- See validation errors   
	<% @customer.errors.inspect %> -->
		<% if @customer.errors.any? %>
			<% @customer.errors.full_messages.each do |message| %>
				<%= message %>
			<% end %>
		<% end %>


	<%= f.label :name %>
	<%= f.text_field :name, placeholder: "First name " %>
	<%= f.label :last_name %>
	<%= f.text_field :last_name, placeholder: "Last name " %>
	<%= f.label :weight %>
	<%= f.number_field :weight, step: 0.1, placeholder: "Weight" %>
	<%= f.submit %>

<% end %>

<!-- parentesis are optional for passing the parameters. Keep in mind to understand the code!!!! -->

